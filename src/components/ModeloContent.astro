---
import { t } from '../i18n/utils';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const CTA = 'https://cal.com/troopdegen/lets-build-together?duration=20&overlayCalendar=true';

const journeySteps = [
  { key: 'discover', emoji: 'üîç', color: 'border-accent/40 bg-accent/8', accent: 'text-accent', bg: 'bg-accent/15' },
  { key: 'learn', emoji: 'üìö', color: 'border-primary/40 bg-primary/8', accent: 'text-primary', bg: 'bg-primary/15' },
  { key: 'build', emoji: 'üî®', color: 'border-secondary/40 bg-secondary/8', accent: 'text-secondary', bg: 'bg-secondary/15' },
  { key: 'launch', emoji: 'üöÄ', color: 'border-foreground/20 bg-foreground/5', accent: 'text-foreground', bg: 'bg-foreground/10' },
];

const methodologies = ['learning', 'pbl', 'cbe', 'peer', 'ai'];

const okrs = ['employability', 'certs', 'portfolio', 'skills', 'retention', 'industry'];

const collaborationItems = ['cocert', 'integration', 'demoday', 'legal', 'infra'];

const programs = ['vibe', 'agent', 'hackjam', 'workshops'];
---

<!-- Hero -->
<section class="min-h-[70vh] flex items-center relative overflow-hidden">
  <div class="absolute inset-0 bg-primary/5"></div>
  <div class="max-w-5xl mx-auto px-4 py-24 relative z-10 text-center space-y-8">
    <div class="inline-block text-xs font-bold uppercase tracking-widest text-primary bg-primary/10 px-4 py-2 rounded-full">{t('modelo', lang, 'hero.badge')}</div>
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-foreground leading-tight">
      {t('modelo', lang, 'hero.title')}
    </h1>
    <p class="text-2xl md:text-3xl text-foreground/70 font-medium">
      {t('modelo', lang, 'hero.subtitle')}
    </p>
    <p class="text-lg text-foreground/50 max-w-2xl mx-auto leading-relaxed">
      {t('modelo', lang, 'hero.description')}
    </p>
    <a href="#journey" style="color: #ffffff !important;" class="inline-block bg-primary px-10 py-5 rounded-full font-bold text-lg hover:brightness-110 transition-all hover:scale-105 transform shadow-lg">
      {t('modelo', lang, 'hero.cta')}
    </a>
  </div>
</section>

<!-- El Camino del Estudiante -->
<section class="py-20 px-4 bg-muted" id="journey">
  <div class="max-w-5xl mx-auto space-y-12">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-medium">{t('modelo', lang, 'journey.title')}</h2>
      <p class="text-foreground/50 text-lg mt-2">{t('modelo', lang, 'journey.subtitle')}</p>
    </div>

    <!-- Journey visual bar -->
    <div class="flex rounded-2xl overflow-hidden border border-primary/20 text-center font-bold text-sm">
      {journeySteps.map((step) => (
        <div class={`flex-1 py-6 ${step.bg} border-r border-primary/10 last:border-r-0`}>
          <div class="text-2xl mb-1">{step.emoji}</div>
          <div class={step.accent}>{t('modelo', lang, `journey.${step.key}.phase`)}</div>
          <div class="text-xs text-foreground/40 mt-1">{t('modelo', lang, `journey.${step.key}.label`)}</div>
        </div>
      ))}
    </div>

    <!-- Journey cards -->
    <div class="space-y-6">
      {journeySteps.map((step) => (
        <div class={`rounded-2xl border-2 p-6 sm:p-8 space-y-4 ${step.color}`}>
          <div class="flex flex-wrap items-center gap-3">
            <span class="text-3xl">{step.emoji}</span>
            <div>
              <span class={`text-xs font-bold uppercase tracking-widest ${step.accent} ${step.bg} px-3 py-1 rounded-full`}>{t('modelo', lang, `journey.${step.key}.phase`)}</span>
              <h3 class="font-bold text-lg mt-2">{t('modelo', lang, `journey.${step.key}.title`)}</h3>
            </div>
          </div>
          <p class="text-sm text-foreground/70 leading-relaxed">{t('modelo', lang, `journey.${step.key}.desc`)}</p>
          <div class={`inline-block rounded-full ${step.bg} ${step.accent} px-4 py-1.5 text-sm font-semibold`}>
            ‚Üí {t('modelo', lang, `journey.${step.key}.outcome`)}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Metodolog√≠a -->
<section class="py-20 px-4" id="methodology">
  <div class="max-w-5xl mx-auto space-y-8">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-medium">{t('modelo', lang, 'methodology.title')}</h2>
      <p class="text-foreground/50 text-lg mt-2">{t('modelo', lang, 'methodology.subtitle')}</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 stagger">
      {methodologies.map((key) => (
        <div class="rounded-2xl border-2 border-foreground/10 bg-background p-6 space-y-3">
          <h3 class="font-semibold text-lg text-foreground">{t('modelo', lang, `methodology.${key}.title`)}</h3>
          <div class="rounded-full bg-primary/15 text-primary px-3 py-1 text-xs font-semibold inline-block">
            {t('modelo', lang, `methodology.${key}.framework`)}
          </div>
          <p class="text-sm text-foreground/70 leading-relaxed">{t('modelo', lang, `methodology.${key}.desc`)}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- OKRs -->
<section class="py-20 px-4 bg-muted" id="okrs">
  <div class="max-w-5xl mx-auto space-y-8">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-medium">{t('modelo', lang, 'okrs.title')}</h2>
      <p class="text-foreground/50 text-lg mt-2">{t('modelo', lang, 'okrs.subtitle')}</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 stagger">
      {okrs.map((key) => (
        <div class="rounded-2xl border border-primary/15 bg-card p-6 space-y-3 text-center">
          <h3 class="font-bold text-base">{t('modelo', lang, `okrs.${key}.metric`)}</h3>
          <div class="text-3xl font-bold text-primary">{t('modelo', lang, `okrs.${key}.target`)}</div>
          <p class="text-sm text-foreground/60">{t('modelo', lang, `okrs.${key}.desc`)}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Modelo de Colaboraci√≥n -->
<section class="py-20 px-4" id="collaboration">
  <div class="max-w-5xl mx-auto space-y-8">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-medium">{t('modelo', lang, 'collaboration.title')}</h2>
      <p class="text-foreground/50 text-lg mt-2">{t('modelo', lang, 'collaboration.subtitle')}</p>
    </div>

    <div class="space-y-4">
      {collaborationItems.map((key, i) => (
        <div class="rounded-2xl border border-primary/15 bg-card p-6 flex flex-col sm:flex-row gap-4 items-start">
          <span class="text-primary font-bold text-xl min-w-[2rem]">{i + 1}.</span>
          <div>
            <h3 class="font-bold text-lg">{t('modelo', lang, `collaboration.${key}.title`)}</h3>
            <p class="text-sm text-foreground/60 mt-1 leading-relaxed">{t('modelo', lang, `collaboration.${key}.desc`)}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Programas Disponibles -->
<section class="py-20 px-4 bg-muted" id="programs">
  <div class="max-w-5xl mx-auto space-y-8">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-medium">{t('modelo', lang, 'programs.title')}</h2>
      <p class="text-foreground/50 text-lg mt-2">{t('modelo', lang, 'programs.subtitle')}</p>
    </div>

    <div class="grid sm:grid-cols-2 gap-6 stagger">
      {programs.map((key) => (
        <div class="rounded-2xl border border-primary/15 bg-card p-6 space-y-4">
          <h3 class="font-bold text-xl">{t('modelo', lang, `programs.${key}.title`)}</h3>
          <div class="flex flex-wrap gap-2">
            <span class="rounded-full bg-primary/10 text-primary px-3 py-1 text-xs font-semibold">{t('modelo', lang, `programs.${key}.duration`)}</span>
            <span class="rounded-full bg-foreground/5 text-foreground/60 px-3 py-1 text-xs font-semibold">{t('modelo', lang, `programs.${key}.level`)}</span>
          </div>
          <p class="text-sm text-foreground/60 leading-relaxed">{t('modelo', lang, `programs.${key}.desc`)}</p>
          <div class="text-xs text-foreground/40 space-y-1">
            <div><span class="font-bold text-foreground/50">Outcomes:</span> {t('modelo', lang, `programs.${key}.outcomes`)}</div>
            <div><span class="font-bold text-foreground/50">Precio:</span> {t('modelo', lang, `programs.${key}.price`)}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Puntos de Sinergia -->
<section class="py-20 px-4" id="synergy">
  <div class="max-w-5xl mx-auto space-y-8">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-medium">{t('modelo', lang, 'synergy.title')}</h2>
      <p class="text-foreground/50 text-lg mt-2">{t('modelo', lang, 'synergy.subtitle')}</p>
    </div>

    <div class="grid sm:grid-cols-3 gap-6 stagger">
      {[
        { key: 'university', emoji: 'üéì' },
        { key: 'student', emoji: 'üë®‚Äçüéì' },
        { key: 'industry', emoji: 'üè¢' },
      ].map(({ key, emoji }) => (
        <div class="rounded-2xl border border-primary/15 bg-card p-6 space-y-4">
          <div class="text-3xl">{emoji}</div>
          <h3 class="font-bold text-lg">{t('modelo', lang, `synergy.${key}.title`)}</h3>
          <ul class="space-y-2 text-sm text-foreground/60">
            {t('modelo', lang, `synergy.${key}.items`).split(' ¬∑ ').map((item: string) => (
              <li class="flex gap-2"><span class="text-primary">‚úì</span>{item}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- CTA -->
<section class="py-24 px-4 bg-muted cta-section">
  <div class="max-w-3xl mx-auto text-center space-y-8">
    <h2 class="text-4xl sm:text-5xl font-medium">{t('modelo', lang, 'cta.title')}</h2>
    <p class="text-xl text-foreground/60">{t('modelo', lang, 'cta.description')}</p>
    <a href={CTA} target="_blank" rel="noopener" style="color: #ffffff !important;" class="inline-block bg-primary px-10 py-5 rounded-full font-bold text-lg hover:brightness-110 transition-all hover:scale-105 transform">
      {t('modelo', lang, 'cta.button')}
    </a>
    <p class="text-foreground/50 text-sm">{t('modelo', lang, 'cta.email')}</p>
  </div>
</section>
