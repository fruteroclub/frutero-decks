---
import { t } from '../i18n/utils';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const CTA = 'https://cal.com/troopdegen/lets-build-together?duration=20&overlayCalendar=true';

const journeySteps = [
  { key: 'discover', emoji: 'üîç', num: '01' },
  { key: 'learn', emoji: 'üìö', num: '02' },
  { key: 'build', emoji: 'üî®', num: '03' },
  { key: 'launch', emoji: 'üöÄ', num: '04' },
];

const methodologies = ['learning', 'pbl', 'cbe', 'peer', 'ai'];

const okrs = ['employability', 'certs', 'portfolio', 'skills', 'retention', 'industry'];

const collaborationItems = ['cocert', 'integration', 'demoday', 'legal', 'infra'];

const programs = ['vibe', 'agent', 'hackjam', 'workshops'];
---

<!-- Hero -->
<section class="min-h-[65svh] flex items-center pt-12 pb-8 md:pt-20">
  <div class="max-w-5xl mx-auto px-4 text-center space-y-6">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-foreground leading-tight">
      <span class="inline-block -rotate-2 rounded-lg bg-primary px-4 py-2 text-white">Modelo</span>
      {' '}Educativo{' '}
      <span class="inline-block rotate-1 rounded-lg bg-accent px-4 py-2 text-foreground">Frutero</span>
    </h1>
    <h3 class="text-2xl md:text-3xl text-foreground font-medium max-w-3xl mx-auto">
      {t('modelo', lang, 'hero.subtitle')}
    </h3>
    <p class="text-lg text-muted-fg max-w-2xl mx-auto leading-relaxed">
      {t('modelo', lang, 'hero.description')}
    </p>
    <a href="#journey" style="color: #ffffff !important;" class="inline-block bg-primary px-10 py-5 rounded-full font-semibold text-lg hover:brightness-110 transition-all hover:scale-105 transform">
      {t('modelo', lang, 'hero.cta')}
    </a>
  </div>
</section>

<!-- El Camino del Estudiante -->
<section class="py-16 px-4" id="journey">
  <div class="max-w-5xl mx-auto space-y-10">
    <div class="text-center space-y-3">
      <h2 class="text-3xl md:text-4xl text-foreground">
        El Camino del{' '}
        <span class="inline-block -rotate-1 rounded-lg bg-secondary px-4 py-2 text-white">Estudiante</span>
      </h2>
      <p class="text-xl text-muted-fg">{t('modelo', lang, 'journey.subtitle')}</p>
    </div>

    <div class="space-y-6">
      {journeySteps.map((step, i) => (
        <div class="flex items-start gap-6 md:gap-8">
          <!-- Number -->
          <div class="shrink-0 w-16 h-16 rounded-2xl bg-foreground flex items-center justify-center">
            <span class="text-2xl font-semibold text-background font-[family-name:var(--font-space)]">{step.num}</span>
          </div>
          <!-- Content -->
          <div class="flex-1 space-y-2">
            <div class="flex flex-wrap items-center gap-3">
              <span class="text-2xl">{step.emoji}</span>
              <span class="text-sm font-semibold uppercase tracking-widest text-primary">{t('modelo', lang, `journey.${step.key}.phase`)}</span>
            </div>
            <h3 class="text-xl font-semibold text-foreground">{t('modelo', lang, `journey.${step.key}.title`)}</h3>
            <p class="text-base text-muted-fg leading-relaxed">{t('modelo', lang, `journey.${step.key}.desc`)}</p>
            <p class="text-sm font-semibold text-primary">‚Üí {t('modelo', lang, `journey.${step.key}.outcome`)}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Metodolog√≠a -->
<section class="py-16 px-4" id="methodology">
  <div class="max-w-5xl mx-auto space-y-10">
    <div class="text-center space-y-3">
      <h2 class="text-3xl md:text-4xl text-foreground">
        Metodolog√≠a{' '}
        <span class="subrayado underline-offset-8">Pedag√≥gica</span>
      </h2>
      <p class="text-xl text-muted-fg">{t('modelo', lang, 'methodology.subtitle')}</p>
    </div>

    <!-- Dark card with methodologies -->
    <div class="rounded-2xl bg-foreground p-8 md:p-10 space-y-6">
      {methodologies.map((key) => (
        <div class="border-b border-background/10 pb-5 last:border-0 last:pb-0">
          <div class="flex flex-wrap items-center gap-3 mb-2">
            <h3 class="text-lg font-semibold text-background">{t('modelo', lang, `methodology.${key}.title`)}</h3>
            <span class="rounded-full bg-primary/20 text-primary px-3 py-0.5 text-xs font-semibold">{t('modelo', lang, `methodology.${key}.framework`)}</span>
          </div>
          <p class="text-base text-background/70 leading-relaxed">{t('modelo', lang, `methodology.${key}.desc`)}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- OKRs -->
<section class="py-16 px-4" id="okrs">
  <div class="max-w-5xl mx-auto space-y-10">
    <div class="text-center space-y-3">
      <h2 class="text-3xl md:text-4xl text-foreground">
        Resultados{' '}
        <span class="inline-block rotate-1 rounded-lg bg-accent px-4 py-2 text-foreground">Medibles</span>
      </h2>
      <p class="text-xl text-muted-fg">{t('modelo', lang, 'okrs.subtitle')}</p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 stagger">
      {okrs.map((key) => (
        <div class="rounded-2xl border-2 border-border bg-card p-6 space-y-3 text-center">
          <h4 class="font-semibold text-base text-foreground">{t('modelo', lang, `okrs.${key}.metric`)}</h4>
          <div class="text-4xl font-semibold text-primary">{t('modelo', lang, `okrs.${key}.target`)}</div>
          <p class="text-sm text-muted-fg">{t('modelo', lang, `okrs.${key}.desc`)}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Modelo de Colaboraci√≥n -->
<section class="py-16 px-4" id="collaboration">
  <div class="max-w-5xl mx-auto space-y-10">
    <div class="text-center space-y-3">
      <h2 class="text-3xl md:text-4xl text-foreground">
        Modelo de{' '}
        <span class="inline-block -rotate-1 rounded-lg bg-primary px-4 py-2 text-white">Colaboraci√≥n</span>
      </h2>
      <p class="text-xl text-muted-fg">{t('modelo', lang, 'collaboration.subtitle')}</p>
    </div>

    <div class="space-y-4">
      {collaborationItems.map((key, i) => (
        <div class="flex items-start gap-5 rounded-2xl border-2 border-border bg-background p-6 transition-all hover:border-primary/50">
          <span class="shrink-0 w-10 h-10 rounded-full bg-primary flex items-center justify-center text-white font-semibold">{i + 1}</span>
          <div>
            <h3 class="font-semibold text-lg text-foreground">{t('modelo', lang, `collaboration.${key}.title`)}</h3>
            <p class="text-base text-muted-fg mt-1 leading-relaxed">{t('modelo', lang, `collaboration.${key}.desc`)}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Programas Disponibles -->
<section class="py-16 px-4" id="programs">
  <div class="max-w-5xl mx-auto space-y-10">
    <div class="text-center space-y-3">
      <h2 class="text-3xl md:text-4xl text-foreground">
        Programas{' '}
        <span class="subrayado underline-offset-8">Disponibles</span>
      </h2>
      <p class="text-xl text-muted-fg">{t('modelo', lang, 'programs.subtitle')}</p>
    </div>

    <div class="grid sm:grid-cols-2 gap-6 stagger">
      {programs.map((key) => (
        <div class="rounded-2xl border-2 border-border bg-card p-6 space-y-4">
          <h3 class="font-semibold text-xl text-foreground">{t('modelo', lang, `programs.${key}.title`)}</h3>
          <div class="flex flex-wrap gap-2">
            <span class="rounded-full bg-primary px-3 py-1 text-xs font-semibold text-white">{t('modelo', lang, `programs.${key}.duration`)}</span>
            <span class="rounded-full bg-foreground/10 text-foreground px-3 py-1 text-xs font-semibold">{t('modelo', lang, `programs.${key}.level`)}</span>
          </div>
          <p class="text-base text-muted-fg leading-relaxed">{t('modelo', lang, `programs.${key}.desc`)}</p>
          <div class="text-sm text-foreground space-y-1">
            <div><span class="font-semibold">Outcomes:</span> <span class="text-muted-fg">{t('modelo', lang, `programs.${key}.outcomes`)}</span></div>
            <div><span class="font-semibold">Precio:</span> <span class="text-primary font-semibold">{t('modelo', lang, `programs.${key}.price`)}</span></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Puntos de Sinergia -->
<section class="py-16 px-4" id="synergy">
  <div class="max-w-5xl mx-auto space-y-10">
    <div class="text-center space-y-3">
      <h2 class="text-3xl md:text-4xl text-foreground">
        Puntos de{' '}
        <span class="inline-block rotate-1 rounded-lg bg-secondary px-4 py-2 text-white">Sinergia</span>
      </h2>
      <p class="text-xl text-muted-fg">{t('modelo', lang, 'synergy.subtitle')}</p>
    </div>

    <div class="grid sm:grid-cols-3 gap-6 stagger">
      {[
        { key: 'university', emoji: 'üéì' },
        { key: 'student', emoji: 'üë®‚Äçüéì' },
        { key: 'industry', emoji: 'üè¢' },
      ].map(({ key, emoji }) => (
        <div class="rounded-2xl bg-foreground p-6 space-y-4">
          <div class="text-3xl">{emoji}</div>
          <h3 class="font-semibold text-lg text-background">{t('modelo', lang, `synergy.${key}.title`)}</h3>
          <ul class="space-y-2 text-sm text-background/70">
            {t('modelo', lang, `synergy.${key}.items`).split(' ¬∑ ').map((item: string) => (
              <li class="flex gap-2"><span class="text-primary">‚úì</span>{item}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- CTA -->
<section class="py-20 px-4">
  <div class="max-w-3xl mx-auto text-center space-y-8">
    <div class="rounded-2xl bg-foreground p-10 md:p-14 space-y-6">
      <h2 class="text-3xl md:text-4xl text-background font-semibold">
        {t('modelo', lang, 'cta.title')}
      </h2>
      <p class="text-xl text-background/70">{t('modelo', lang, 'cta.description')}</p>
      <a href={CTA} target="_blank" rel="noopener" style="color: #ffffff !important;" class="inline-block bg-primary px-10 py-5 rounded-full font-semibold text-lg hover:brightness-110 transition-all hover:scale-105 transform">
        {t('modelo', lang, 'cta.button')}
      </a>
      <p class="text-background/50 text-sm">{t('modelo', lang, 'cta.email')}</p>
    </div>
  </div>
</section>
